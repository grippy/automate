{
  "lineWidth": 80,
  "typescript": {
    "quoteStyle": "preferSingle",
    "binaryExpression.operatorPosition": "sameLine"
  },
  "json": {
    "indentWidth": 2,
    "associations": ["**/deno.jsonc", ".dprint.json"]
  },
  "markdown": {},
  "includes": [
    "./cli/**/**/*.ts",
    "./cli/**/*.ts",
    "./cli/*.ts",
    "./core/**/**/*.ts",
    "./core/**/*.ts",
    "./core/*.ts",
    "./ext/**/**/*.ts",
    "./ext/**/*.ts",
    "./ext/*.ts",
    "**/*.{ts,tsx,js,json,jsx,cjs,mjs,json,md}"
  ],
  "excludes": [
    "ARCHITECTURE.md",
    "MISC.md",
    "TODO.md",
    "./boneyard",
    "./cli/template",
    "./.vscode/settings.json",
    "**/node_modules",
    "**/*-lock.json",
    "**/deno.lock"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.82.0.wasm",
    "https://plugins.dprint.dev/json-0.17.0.wasm",
    "https://plugins.dprint.dev/markdown-0.15.2.wasm"
  ]
}
